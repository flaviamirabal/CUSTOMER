<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="helloDialog" title="{i18n>HelloDialogTitle} {/recipient/name}">
		<content>
			<core:Icon src="sap-icon://hello-world" size="5rem" class="sapUiSmallMargin"/>
		</content>
		<beginButton>
			<Button id="buttonDialogClose" text="{i18n>OkDialogButton}" press=".onCloseDialog"/>

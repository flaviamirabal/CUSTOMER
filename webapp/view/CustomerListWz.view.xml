<mvc:View controllerName="nmsfiori.Customer.controller.CustomerList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<List id="idCustomerList" headerText="{i18n>CustomerListTitle}" class="sapUiResponsiveMargin" width="auto" 
		items="{
		path: 'customerWz>/Customers',
		sorter: {
			path: 'Country',
			group: true
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>CustomerListTitle}"/>
				<ToolbarSpacer/>
				<SearchField width='50%' search=".onFilter"/>
			</Toolbar>
		</headerToolbar>
		<items>
			<ObjectListItem title="{customerWz>CompanyName} / {customerWz>ContactName} - {customerWz>City}"
				number="{customerWz>PostalCode}">
				<firstStatus>
					<ObjectStatus text="{ 
						path: 'customerWz>ContactTitle', 
						formatter: '.formatter.contactTitleText'
					}"/>
				</firstStatus>
			</ObjectListItem>
		</items>
	</List>
</mvc:View>